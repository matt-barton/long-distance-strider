extend default

block content

  div#race_details
    p.bold.
      #{reportName}

    div.report
      !=reportHtml
    p
      if distance
        p Distance: #{distance} mi
      else
        p Unable to determine race distance

    p
      if runners.length > 0
        table
          thead
            tr
              th.
                Runners
          tbody
            each runner in runners
              tr
                td 
                  !=runner
      else
        p Unable to determine runners


    unless published===true
      button(id='ignore') Ignore Race